{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": "",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./static/",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
    "./.storybook/**/*"
  ],
  "exclude": [
    "./node_modules/"
  ]
}
